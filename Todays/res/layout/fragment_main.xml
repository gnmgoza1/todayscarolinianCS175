<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.todays.DashboardActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/aImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/articleText"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/articleType"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/articleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/articleTitle"
        android:layout_alignRight="@+id/articleTitle"
        android:paddingLeft="2dp"
        android:text="@string/article_date"
        android:textColor="#8e8c8c" />

    <TextView
        android:id="@+id/articleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/articleDate"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/article_type"
        android:textColor="#8f2323"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/articleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/articleTitle"
        android:layout_below="@+id/articleTitle"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/article_text"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/articleType"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/article_title"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>